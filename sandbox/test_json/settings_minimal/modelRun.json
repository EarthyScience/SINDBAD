{
	"1.c":	"flags for running optimization (runOpti), forward (runForward), forward run  per year (runForwardYearly), or forward run with model cost (calcCost)",
	"2.c":	"information related to model time steps",
	"3.c": "output and datatype",

	"time":
	{
		"step": 				"d",
		"sDate": 				"2000-01-01",
		"eDate": 				"2019-12-31",
		"nYears": 				12,
		"nStepsDay": 			1,
		"nStepsYear": 			365
	},
	"flags":
	{
		"runForwardYearly": 	false,
		"runForward": 			true,
		"runOpti": 				true,
		"calcCost":				true
	},
	"rules":
	{
		"verbosity": 5,
		"dataType": "Float64",
		"tolerance": 0.0001
	},
	"output": {
		"dirPath": "sandbox/output/",
		"dataFormat": ".nc",
		"variables": {
			"write": [
					"fluxes.evapotranspiration",
					"fluxes.transpiration",
					"fluxes.runoff",
					"fluxes.runoffSurface",
					"fluxes.gpp",
					"fluxes.NPP",
					"fluxes.NEE",
					"pools.snowW",
					"pools.soilW",
					"waterBalance.waterBalance"
				],
			"store": ["pools.soilW", "cCycle.cNPP"]
		}
	}
}
